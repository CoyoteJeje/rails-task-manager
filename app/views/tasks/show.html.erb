<h1>Liste d'une tache :</h1>

<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to 'Back to index', tasks_path %>
